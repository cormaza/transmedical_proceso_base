<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template
            id="portal_my_home_medical_liquidation"
            name="Portal My Home : Medical Liquidation entries"
            inherit_id="portal.portal_my_home"
            priority="36"
        >
            <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                <t t-if="medical_liquidation_count" t-call="portal.portal_docs_entry">
                    <t t-set="title">Medical Liquidation</t>
                    <t t-set="url" t-value="'/my/medical_liquidation'" />
                    <t t-set="count" t-value="medical_liquidation_count" />
                </t>
            </xpath>
        </template>
        <template
            id="portal_my_home_menu_medical_liquidation"
            name="Portal layout : Medical_liquidation menu entries"
            inherit_id="portal.portal_breadcrumbs"
            priority="30"
        >
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li
                    t-if="page_name == 'medical_liquidation'"
                    t-attf-class="breadcrumb-item #{'active ' if not medical_liquidation else ''}"
                >
                    <a
                        t-if="medical_liquidation"
                        t-attf-href="/my/medical_liquidation?{{ keep_query() }}"
                    >
                        Medical
                        Liquidation
                    </a>
                    <t t-else="">Medical Liquidation</t>
                </li>
                <t t-foreach="medical_liquidation" t-as="liquidation_id">
                    <li class="breadcrumb-item active">
                        <t t-esc="liquidation_id.number" />
                    </li>
                </t>
            </xpath>
        </template>
        <template id="portal_my_medical_liquidation" name="My Referral Guides">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True" />
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Medical Liquidation</t>
                </t>
                <t t-if="not medical_liquidation and not errors">
                    <p>Currently there are no medical liquidation for your account.</p>
                </t>
                <t t-if="medical_liquidation" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Document Number</th>
                            <th>Issue Date</th>
                            <th>Contact</th>
                            <th>Total</th>
                            <th>Document</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="medical_liquidation" t-as="liquidation_id">
                            <tr>
                                <td>
                                    <t
                                        t-set="document_number"
                                        t-value="liquidation_id.number"
                                    />
                                    <a
                                        t-att-href="liquidation_id.get_portal_url()"
                                        t-att-title="liquidation_id"
                                    >
                                        <t
                                            t-esc="document_number"
                                            t-if="document_number"
                                        />
                                        <em t-else="">Draft Medical Liquidation</em>
                                    </a>
                                </td>
                                note
                                <td>
                                    <span t-field="liquidation_id.issue_date" />
                                </td>
                                <td>
                                    <span t-field="liquidation_id.partner_id.name" />
                                </td>
                                <td>
                                    <span t-field="liquidation_id.total_liquidation" />
                                </td>
                                <td>
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a
                                            class="btn btn-link btn-block o_download_btn"
                                            t-att-href="liquidation_id.get_portal_url(report_type='pdf', download=True)"
                                            title="Download Medical Liquidation"
                                        >
                                            <i class="fa fa-file-pdf-o" />
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
            </t>
        </template>
        <template
            id="portal_medical_liquidation_page"
            name="Medical Liquidation Portal Template"
            inherit_id="portal.portal_sidebar"
            primary="True"
        >
            <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
                <div class="row mt16 o_portal_electronic_sidebar">
                    <!-- Sidebar -->
                    <t t-call="portal.portal_record_sidebar">
                        <t t-set="classes" t-value="'col-lg-auto d-print-none'" />
                        <t t-set="title">
                            <h2 class="mb-0">
                                <b t-esc="medical_liquidation.number" />
                            </h2>
                        </t>
                        <t t-set="entries">
                            <ul
                                class="list-group list-group-flush flex-wrap flex-row flex-lg-column"
                            >
                                <li class="list-group-item flex-grow-1">
                                    <div
                                        class="o_download_pdf btn-toolbar flex-sm-nowrap"
                                    >
                                        <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                            <a
                                                class="btn btn-secondary btn-block o_download_btn"
                                                t-att-href="medical_liquidation.get_portal_url(report_type='pdf', download=True)"
                                                title="Download ODA"
                                            >
                                                <i class="fa fa-download" />
                                                Liquidation
                                            </a>
                                        </div>
                                        <div class="btn-group flex-grow-1 mb-1">
                                            <a
                                                class="btn btn-secondary btn-block o_print_btn o_portal_electronic_print"
                                                t-att-href="medical_liquidation.get_portal_url(report_type='pdf')"
                                                id="print_electronic_report"
                                                title="Print RIDE"
                                                target="_blank"
                                            >
                                                <i class="fa fa-print" />
                                                Print Liquidation
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li
                                    t-if="medical_liquidation.create_uid"
                                    class="list-group-item flex-grow-1"
                                >
                                    <div class="small mb-1">
                                        <strong class="text-muted">Contact</strong>
                                    </div>
                                    <div class="row">
                                        <div class="col flex-grow-0 pr-2">
                                            <img
                                                t-if="medical_liquidation.create_uid.image_1024"
                                                class="rounded-circle mt-1 o_portal_contact_img"
                                                t-att-src="image_data_uri(medical_liquidation.create_uid.image_1024)"
                                                alt="Contact"
                                            />
                                            <img
                                                t-else=""
                                                class="rounded-circle mt-1 o_portal_contact_img"
                                                src="/web/static/src/img/user_menu_avatar.png"
                                                alt="Contact"
                                            />
                                        </div>
                                        <div class="col pl-0">
                                            <span
                                                t-field="medical_liquidation.create_uid"
                                                t-options='{"widget": "contact", "fields": ["number"], "no_marker": True}'
                                            />
                                            <a href="#electronic_chatter" class="small">
                                                <i class="fa fa-fw fa-comments" />
                                                <b>Send message</b>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </t>
                    </t>
                    <!-- Page Content -->
                    <div id="electronic_content" class="col-12 col-lg">
                        <t
                            t-if="success and (not error and not warning)"
                            t-call="l10n_ec_niif.portal_document_electronic_success"
                        />
                        <div class="o_portal_html_view shadow p-3">
                            <div class="o_portal_html_loader text-center">
                                <i
                                    class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"
                                />
                            </div>
                            <iframe
                                id="electronic_report_html"
                                class="mt8 mb8"
                                width="100%"
                                height="100%"
                                frameborder="0"
                                scrolling="no"
                                t-att-src="medical_liquidation.get_portal_url(report_type='html')"
                            />
                        </div>
                        <!-- chatter -->
                        <div>
                            <h3 class="mt-4">History</h3>
                            <t t-call="portal.message_thread">
                                <t t-set="object" t-value="medical_liquidation" />
                                <t t-set="chatter_mode" t-value="'json'" />
                            </t>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
