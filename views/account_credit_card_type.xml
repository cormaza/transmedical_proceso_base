<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="account_type_credit_card_tree_view" model="ir.ui.view">
            <field name="name">account.type.credit.card.tree</field>
            <field name="model">account.type.credit.card</field>
            <field name="arch" type="xml">
                <tree string="Type Credit Card" editable="bottom">
                    <field name="name" />
                    <field name="bank_id" />
                </tree>
            </field>
        </record>
        <record
            id="account_type_credit_card_tree_act_window"
            model="ir.actions.act_window"
        >
            <field name="name">Type Credit Card</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.type.credit.card</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add new Type Credit Card.
                </p>
            </field>
        </record>
        <menuitem
            name="Type Credit Card"
            id="type_credit_card_menu_item"
            parent="account.account_invoicing_menu"
            action="account_type_credit_card_tree_act_window"
        />
    </data>
</odoo>
