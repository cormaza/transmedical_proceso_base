<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_liquidation_move_mail_template" model="mail.template">
            <field name="name">Liquidation Purchase: Send by email</field>
            <field name="model_id" ref="model_account_move"/>
            <field name="subject">${object.company_id.name} Liquidation ${object.name}
            </field>
            <field name="email_from">${(user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/>
                        <br/>
                        Dear ${object.partner_id.display_name} <br/><br/>
                        Liquidation Purchase <strong>${object.name}</strong> is ready for review. <br/><br/>
                        Date of liquidation: <strong>${object.date_invoice}</strong><br/>
                        Amount: <strong>${object.amount_total}</strong>
                         <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="account.account_invoices_without_payment"/>
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
