<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="medical_atencion_order_mail_template" model="mail.template">
            <field name="name">Medical Atencion Order: Send by email</field>
            <field name="model_id" ref="model_medical_attention_order" />
            <field name="subject">
                ${object.company_id.name} Orden ${object.number}
            </field>
            <field name="email_from">${(user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br />
                        <br />
                        Dear ${object.partner_id.display_name}
                        <br />
                        <br />
                        Medical Attention Order
                        <strong>${object.number}</strong>
                        is ready for review.
                        <br />
                        <br />
                        Date of issue:
                        <strong>${object.issue_date}</strong>
                        <br />
                        Expiration date:
                        <strong>${object.due_date}</strong>
                        <br />
                        CoPay Total:
                        <strong>${object.copayment_total}</strong>
                        <br />
                        <br />
                        <br />
                        Do not hesitate to contact us if you have any questions.
                        <br />
                    </p>
                </div>
            </field>
            <field
                name="report_template"
                ref="action_template_medical_attention_order"
            />
            <field name="report_name">${(object.name or '').replace('/','_')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="user_signature" eval="False" />
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
